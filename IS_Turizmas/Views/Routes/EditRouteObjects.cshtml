@model List<IS_Turizmas.Models.MarsrutoObjektai>
@{
    ViewData["Title"] = "RouteObjects";
    <div class="container-fluid">
        <div class="col-md-10 mx-auto text-center py-3 my-3">
            <h4>Maršruto objektų redagavimas</h4>
            <h5>Maršrutas: @Html.DisplayFor(m => Model[0].FkMarsrutasNavigation.Pavadinimas)</h5>
        </div>
        <div class="row">
            <div class="col-md-10 mx-auto">
                <form asp-controller="Routes" asp-action="EditObjects" method="POST">
                    <label><strong>Objektai(-as)</strong></label>
                    <ul>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <li @if(i+1 == Model.Count) { <text>class="last-object-row object-row form-group"</text> } else { <text>class="object-row form-group"</text> }>

                            <div class="row">
                                    <div class="col-md-9 mx-auto">
                                        <input type="text" class="form-control" name="address[]" placeholder="Įveskite adresą" value="@Html.DisplayFor(m => Model[i].FkLankytinasObjektasNavigation.Pavadinimas)"/>
                                    </div>
                                    <div class="col-md-3 mx-auto">
                                        <button type="button" data-value="object-row" data-hide="add-more" data-last="last-object-row" class="btn btn-primary remove-row">-</button>
                                        <button type="button" data-value="last-object-row" data-hide="add-more" class="btn btn-primary add-more">+</button>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                    <button class="btn btn-primary" type="submit">Keisti objektus</button>
                </form>
            </div>
        </div>
        <br>
    </div>
}
@section Scripts{
    <script src="@Url.Content("~/js/object-row-manipulation.js")"></script>
}
