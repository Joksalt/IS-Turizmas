@{
    ViewData["Title"] = "RouteDesctiption";
    <div class="col-md-10 mx-auto text-center py-3 my-3">
        <h1>Mano sukurtų maršrutų langas</h1>
    </div>
    <div class="col-md-10 mx-auto">
        <div class="row">
        <div class="col-md-6"><a asp-action="CreateRouteDescription">Kurti naują maršrutą</a></div>
        <div class="col-md-6 text-md-right"><a asp-action="CalculateRouteUniqueness">Apskaičiuoti maršruto unikalumo indeksą</a></div>
        </div>
    </div>
    <div class="col-md-10 mx-auto">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Pavadinimas</th>
                    <th scope="col">Sukūrimo data</th>
                    <th scope="col">Modifikavimo data</th>
                    <th scope="col">Veiksmai</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>1</th>
                    <td>Kaunas-Baltstogė-Varšuva-Kaunas</td>
                    <td>2020-11-03</td>
                    <td>2020-11-05</td>
                    <td><a asp-controller="Content" asp-action="ViewRouteInfo">Maršruto informacija</a> | <a asp-action="EditRouteDescription">Redaguoti aprašymą</a> | <a asp-action="EditRouteObjects">Redaguoti objektus</a> | <a asp-action="ViewMap"> Žemėlapis</a> | <a asp-action="Index" data-toggle="modal" data-target="#deleteConfirmation">Šalinti</a></td>
                </tr>
                <tr>
                    <th>2</th>
                    <td>Vilnius-Kaunas-Vilnius</td>
                    <td>2020-11-04</td>
                    <td>2020-11-04</td>
                    <td><a asp-controller="Content" asp-action="ViewRouteInfo">Maršruto informacija</a> | <a asp-action="EditRouteDescription">Redaguoti aprašymą</a> | <a asp-action="EditRouteObjects">Redaguoti objektus</a> | <a asp-action="ViewMap"> Žemėlapis</a> | <a asp-action="Index" data-toggle="modal" data-target="#deleteConfirmation">Šalinti</a></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!--Delete confirmation window-->
    <div class="modal fade" id="deleteConfirmation" tabindex="-1" role="dialog" aria-labelledby="Delete confirmation window" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmation">Šalinimo patvirtinimas</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Ar tikrai norite ištrinti maršrutą?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Šalinti</button>
                </div>
            </div>
        </div>
    </div>
}
