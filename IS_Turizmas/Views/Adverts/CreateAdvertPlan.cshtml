@{
    ViewData["Title"] = "Create Advert Plan";
    <div class="container-fluid">
        <div class="col-md-10 mx-auto text-center py-3 my-3">
            <h1>Kuriamas reklamos planas</h1>
        </div>
        <div class="row">
            <div class="col-md-10 mx-auto">
                <form asp-controller="Adverts" asp-action="AdvertPlanCreate" method="POST">
                    <div class="form-group">
                        <label><strong>Laikas iki</strong></label>
                        <input type="datetime-local" class="form-control" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Sukurti</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
