<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link href="~/css/sticky-footer.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" />

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>


</head>
<body>
    <!--Navigation-->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img class="logo" src="non_existing" alt="logo" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li asp-active-controllers="Home" asp-active-actions="Index">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Pagrindinis</a>
                    </li>
                    <li asp-active-controllers="Routes" asp-active-actions="Index, CreateRouteDescription, EditRouteDescription, ViewMap, AddRouteObjects, EditRouteObjects">
                        <a class="nav-link" asp-controller="Routes" asp-action="Index">Mano maršrutai</a>
                    </li>
                    <li asp-active-controllers="NotImplemented" asp-active-actions="NotImplemented">
                        <a class="nav-link" href="/">Profilis</a>
                    </li>
                </ul>

            </div>

        </div>
    </nav>
    <div>
        @RenderBody()
    </div>

    <footer class="footer bg-dark">
        <div class="container-fluid text-center">
            <!--Copyright-->
            <div class="footer-copyright text-white-50">
                <div>© Visos teisės saugomos KTU</div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", false)
</body>
</html>
